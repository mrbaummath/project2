<script>
  const p = {{ set.percentP }}
  const q = 1 - {{ set.percentP }}
  const n = {{ set.n }} 
  const mean = n*p
  const sd = Math.sqrt(n*p*q)
  const dist = ss.binomialDistribution(n, p)
  console.log(dist)
  const maxProb = Math.max(...dist)
  console.log(maxProb)
  const leftBound = (mean - 3*sd) > 0 ? (mean - 3*sd) : 0
  const rightBound = (mean + 3*sd) < n ? (mean + 3*sd) : n
 
  const elt = document.getElementById('calculator');
  const calculator = Desmos.GraphingCalculator(elt);
  calculator.setExpression({ id: 'graph1', latex: `\\operatorname{binomialdist}\\left(${n},${p}\\right)`});
  calculator.setMathBounds({
    left: leftBound,
    right: rightBound,
    bottom: -1 * .01*maxProb,
    top: 1.1*maxProb
  })

</script>

