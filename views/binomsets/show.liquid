{% layout 'layout.liquid' %}
{% block content %}

<div class="row">
    <div class="col-4">
        <article>
            <h2>
                {{ binomSet.title }}
            </h2>
            <h3>"Success": {{ binomSet.p }}</h3>
            <h3>"Failure": {{ binomSet.q }}</h3>
            <h3>Probability of Success per Trial: {{binomSet.percentP}}</h3>
            {% if binomSet.owner == userId %}
            <div class="btn-group">
                <a href="/binomsets/{{ binomSet.id }}/edit" class="btn btn-success">Edit</a>
                <form action="/datasets/binom/{{ binomSet.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
            {% endif %}
            {% render '../datasets/data.liquid', set: binomSet %}

        </article>
    </div>
    <div class="col-8" style="padding-top: 1rem">
        {% render '../desmos/binom_calc.liquid', set: binomSet %}
    </div>
</div>
<div class="row">
     {% render '../datasets/notes.liquid', type:"binom", set: binomSet, loggedIn: loggedIn, userId: userId %}
</div>
   


{% endblock %}