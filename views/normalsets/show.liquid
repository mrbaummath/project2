{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ normalSet.title }}
        </h2>
        <h3>Mean: {{ normalSet.mean }}</h3>
        <h3>Standard Deviaton: {{ normalSet.stDev }}</h3>
        {% if example.owner == userId %}
        <div class="btn-group">

            <a href="/normalsets/{{ normalSet.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/normalsets/{{ normalSet.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
    {% render '../datasets/data.liquid', values: normalSet.values %}

</div>
{% endblock %}