{% layout 'layout.liquid' %}
{% block content %}

    <div class="row">
        <div class="col-4">
            <article>
                <h2>
                    {{ normalSet.title }}
                </h2>
                <h3>Mean: {{ normalSet.mean }}</h3>
                <h3>Standard Deviaton: {{ normalSet.stDev }}</h3>
                {% if normalSet.owner == userId %}
                    <div class="btn-group">
                        <a href="/normalsets/{{ normalSet.id }}/edit" class="btn btn-success">Edit</a>
                        <form action="/datasets//normal/{{ normalSet.id }}?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </form>
                    </div>
                {% endif %}
                {% render '../datasets/data.liquid', set: normalSet %}
            </article>
        </div>
        <div class="col-8" style="padding-top: 1rem">
            {% render '../desmos/normal_calc.liquid', set: normalSet %}
        </div>      
    </div>
    <div class="row">
         {% render '../datasets/notes.liquid', type:"normal", set: normalSet, loggedIn: loggedIn, userId: userId %}
    </div>

{% endblock %}